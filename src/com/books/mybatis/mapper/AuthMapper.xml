<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Auth">
	<sql id="sql_select">
		select auth_id,auth_name,admin_assign,member_del,review_del,review_comment_del,book_comment_del from auth
	</sql>

	<select id="selectAll" resultType="Auth">
		<include refid="sql_select"/> order by desc
	</select>
	
	<select id="select" parameterType="int" resultType="Auth">
		<include refid="sql_select"/> where Auth_id=#{Auth_id}
	</select>
	

	
</mapper>
